@model PolovniAutomobili.Pages.Automobili.ListModel
@{
}
<h1>Automobili</h1>

<!--@Model.Message-->

<form action="" method="get">
    <!--Action u njemu se govori na koju URL adresu ce podaci da se posalju na server, method="get" koristimo kada se svi podaci koje saljemo salju preko URL-a->
    <div class="form-group"> <!--Ovo su klase od Bootstrap za stilizaciju, koja se dodaje u _Layout.cshtml-->
    <div class="input-group">
        <input type="search" class="form-control" asp-for="SearchTerm" /><br> <!--Value="" atribut se koristi da zelimo da polje bude prazno kada se unese-->
        <button class="btn btn-primary">
            <i class="bi bi-search"></i>
        </button>
    </div>
    </div>
</form>


@foreach(var car in Model.Cars)
{
    <partial name="_Summary" model="car" />
}


<a class="btn btn-primary" asp-page="./Edit">Add new car</a>